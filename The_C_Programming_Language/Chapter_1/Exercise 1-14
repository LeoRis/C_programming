#include <stdio.h>
#define ALPHA 26
#define NUM 10

int main(){

    char c;
    int i = 0;
    
    char digitLetter[ALPHA + NUM];
    
    // Initialize the array and set the elements to 0.
    for(i = 0; i < (ALPHA + NUM); i++){
        digitLetter[i] = 0;
    }

    // Count characters from input.
    while((c = getchar()) != EOF){

        if(c >= '0' && c <= '9'){
            ++digitLetter[c - '0' + ALPHA];
        }else if(c >= 'a' && c <= 'z'){
            ++digitLetter[c - 'a'];
        }
    }
    
    // Print horizontal histogram.
    for(i = 0; i < (ALPHA + NUM); ++i){

        if(i < ALPHA){
            printf(" %c: ", 'a' + i);
        }else if(i >= ALPHA){
            printf(" %c: ", '0' + i - ALPHA);
        }

        int j;
        for(j = 0; j < digitLetter[i]; ++j){
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
