#include <stdio.h>

float conversion(float fahrenheit);

float conversion(float fahrenheit){

    float celsius = 0;

    celsius = (fahrenheit - 32) * (5.0 / 9.0);

    return celsius;
}

int main(){

    float fahr;

    printf("What is the current temperature in F?\n");
    scanf("%f", &fahr);

    printf("The current temperature in Celsius is: %.02f", conversion(fahr));

    return 0;
}
