#include <stdio.h>
#include <math.h>

int number;

//Calculates the difference between the closest prime number and the number entered.
int primeLarger(int number);

    int primeLarger(int number){

        int prime = 0;
        int sum = 0;
        int i = 1;
        int j = 2;

            for(i; i < number; i++){
                sum = number + i;

                // Checking if a number is prime.
                while(j < number){
                    if(sum % j == 0){
                        break;
                    }
                    j++;
                    prime = sum;
                }
            }

        return printf("The difference between %d and %d is: %d", prime, number, prime - number);
    }

int main(){

    int digit;

    printf("Insert a number: \n");
    scanf("%d", &digit);

    primeLarger(digit);

    return 0;
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

int number;

int primeNumber(int number);
int sumNumber(int number);
    
    //Checks if a number is a prime.
    int primeNumber(int number){

        int i;

        if(number < 4){
            return 1;
        }else{
            if((number % 2) == 0){
                return 0;
            }else{
                i = 3;
                while(i * i <= number){
                    if(number % i == 0){
                        return 0;
                    }
                    i += 2;
                }
            }
        }
        return 1;

    }
    
    //Sums the numbers that a numbers consists of.
    int sumNumber(int number){
        int sum = 0;
        while(number){
            sum += number % 10;
            number /= 10;
        }
        return sum;
    }

int main(){

int digit;
   int counter;

   for(int i = 2; i <= 9999; i++){

       if(primeNumber(i) && sumNumber(primeNumber(i))){
           counter++;
       }
   }

   printf("There are %d numbers that meet the condition.\n", counter);
   return 0;
}


